# i3 config file (v4)
###############################
#                             #
#        i3-gaps config       #
#         by derdomee_        #
#                             #
###############################

# Set Super key as i3 mod key
set $mod Mod4

font pango:monospace 8

# ###############
# Set behaviour
# ###############

# Do not allow mouse movement to switch window focus (Clicking still changes focus)
focus_follows_mouse no

# When switching between monitors when focussing another window or workspaces,
# move the mouse to the center of that window
mouse_warping output

# When a window is fullscreen, only show popup windows from this windows class.
# Other windows are ignored
popup_during_fullscreen smart

# Cycle through windows in a container when focus to the edge of the container
# e.g: Right-most window is focused. Change focus to right to focus left-most window.
focus_wrapping yes

# #############
# Set borders
# #############

# Disable window title borders
for_window [class="$.*"] border pixel 2
new_window 1pixel


# ############
# Set colors
# ############
#                           Border    Backgr.   Text      Indicator Childborder
client.focused              #65b619   #65b619   #ffffff   #65b619   #65b619
client.focused_inactive     #65b619   #65b619   #ffffff   #65b619   #65b619
client.unfocused            #333333   #222222   #888888   #292d2e   #222222
client.urgent               #2f343a   #900000   #ffffff   #900000   #900000
client.placeholder          #000000   #0c0c0c   #ffffff   #000000   #0c0c0c
client.background           #ffffff

# ##########
# Set gaps
# ##########

gaps inner 1
gaps outer 2


# #################
# Set keybindings
# #################

# drag floating windows with mouse
floating_modifier $mod

# Start Terminal
bindsym $mod+Return exec st

# Quit current focused window
bindsym $mod+Shift+q kill

# Open dmenu_run (Quick appfinder)
bindsym $mod+d exec --no-startup-id dmenu_run

# Open XFCE4-Appfinder
bindsym $mod+Shift+d exec --no-startup-id xfce4-appfinder
# Tell Appfinder window to float always
for_window [class="Xfce4-appfinder"] floating enable


# Change focused window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Toggle window fullscreen
bindsym $mod+f fullscreen toggle

# Set window layout for tiled windows
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle window floating/tiling
bindsym $mod+Shift+space floating toggle

# Switch focus between tiled and floating windows
bindsym $mod+space focus mode_toggle


bindsym $mod+a focus parent                         # Switch focus to parent container/window

# Enable media keys for audio up, down, toggle sound mute and toggle mic mute
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Media keys for play-pause/next/prev
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screen Brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 -time 0
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 -time 0

# Screenshot
bindsym $mod+Shift+s exec i3-scrot -sc

# Restart i3 with new config
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec dmenu_exit_i3.sh

# keybind mode
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
# Enter resize mode
bindsym $mod+r mode "resize"




# ##################
# Setup workspaces
# ##################
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

set $ws11 "11"
set $ws12 "12"
set $ws13 "13"
set $ws14 "14"
set $ws15 "15"
set $ws16 "16"
set $ws17 "17"
set $ws18 "18"
set $ws19 "19"
set $ws20 "20"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Mod1+1 workspace number $ws11
bindsym $mod+Mod1+2 workspace number $ws12
bindsym $mod+Mod1+3 workspace number $ws13
bindsym $mod+Mod1+4 workspace number $ws14
bindsym $mod+Mod1+5 workspace number $ws15
bindsym $mod+Mod1+6 workspace number $ws16
bindsym $mod+Mod1+7 workspace number $ws17
bindsym $mod+Mod1+8 workspace number $ws18
bindsym $mod+Mod1+9 workspace number $ws19
bindsym $mod+Mod1+0 workspace number $ws20

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+Mod1+1 move container to workspace number $ws11
bindsym $mod+Shift+Mod1+2 move container to workspace number $ws12
bindsym $mod+Shift+Mod1+3 move container to workspace number $ws13
bindsym $mod+Shift+Mod1+4 move container to workspace number $ws14
bindsym $mod+Shift+Mod1+5 move container to workspace number $ws15
bindsym $mod+Shift+Mod1+6 move container to workspace number $ws16
bindsym $mod+Shift+Mod1+7 move container to workspace number $ws17
bindsym $mod+Shift+Mod1+8 move container to workspace number $ws18
bindsym $mod+Shift+Mod1+9 move container to workspace number $ws19
bindsym $mod+Shift+Mod1+0 move container to workspace number $ws20


# ##################
# Execute programs
# ##################
# Set wallpaper background
exec_always --no-startup-id xsetroot -solid "#282828"

# Start polybar
exec_always --no-startup-id $HOME/.config/polybar/launch_singlemonitor.sh

# Start nm-applet in system tray
exec --no-startup-id nm-applet & disown

